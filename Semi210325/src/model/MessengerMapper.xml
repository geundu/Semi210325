<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper

PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"

"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="model.MessengerMapper">
	<select id="login" parameterType="vo.MessengerVO" resultType="vo.MessengerVO">
		SELECT nickname
		FROM chat
		WHERE id = #{id} AND password = #{password}
	</select>

	<insert id="insertUser" parameterType="vo.MessengerVO">
		INSERT INTO chat (id, nickname, password)
		VALUES (#{id}, #{nickname}, #{password})
	</insert>

	<resultMap id="loginHashMap" type="hashmap" />
	<select id="loginProcedure" statementType="CALLABLE" parameterType="java.util.Map">
		{CALL proc_login(#{id}, #{password}, #{nickname, mode=OUT,
		jdbcType=CURSOR, javaType=ResultSet, resultMap=loginHashMap})}
	</select>
</mapper>
