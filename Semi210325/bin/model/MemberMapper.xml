<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper

PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"

"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="model.MemberMapper">
	<select id="getNicknameById" parameterType="string" resultType="member">
		SELECT * FROM chat WHERE id = #{id}
	</select>
	<select id="getUser" resultType="member">
		SELECT * FROM chat ORDER BY id
	</select>
	<insert id="insertMember" parameterType="member">
		INSERT INTO chat (id, nickname, password)
		VALUES (#{id}, #{nickname}, #{password})
	</insert>
</mapper>